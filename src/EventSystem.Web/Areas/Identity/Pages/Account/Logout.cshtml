@page
@model EventSystem.Web.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5">
    <div class="card p-4">
        <h2 class="mb-2">You logged out successfully</h2>
        <p class="text-muted mb-0">
            You will be redirected to the home page in <span id="sec">5</span> seconds…
        </p>
    </div>
</div>

@section Scripts {
    <script>
        let s = 5;
        const el = document.getElementById("sec");
        const t = setInterval(() => {
            s--;
            el.textContent = s;
            if (s <= 0) { clearInterval(t); window.location.href = "/"; }
        }, 1000);
    </script>
}
