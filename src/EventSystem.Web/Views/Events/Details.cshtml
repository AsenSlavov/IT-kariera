@using EventSystem.Data.Constants
@using EventSystem.Web.Infrastructure
@model EventSystem.Services.Models.EventDetailsDto
@{
    ViewData["Title"] = "Event Details";
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <h2>@Model.Title</h2>
        <div class="text-muted">@Model.StartUtc.ToString("u") → @Model.EndUtc.ToString("u")</div>
        <div class="text-muted">@Model.VenueCity — @Model.VenueName (@Model.VenueAddress)</div>
        <div class="text-muted">Organizer: @Model.OrganizerEmail</div>
        <div class="mt-2">
            <span class="badge bg-secondary">Seats: @Model.RegisteredCount / @Model.Capacity</span>
            @if (!Model.IsPublic)
            {
                <span class="badge bg-warning text-dark">Private</span>
            }
        </div>
    </div>

    <div class="text-end">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <form asp-action="Register" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button class="btn btn-success">Register</button>
            </form>
            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-danger">Cancel</button>
            </form>
        }
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <div class="card mb-3">
        <div class="card-body">
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h5>Categories</h5>
        <ul>
            @foreach (var c in Model.Categories)
            {
                <li>@c</li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h5>Tags</h5>
        <ul>
            @foreach (var t in Model.Tags)
            {
                <li>@t</li>
            }
        </ul>
    </div>
</div>

<hr />

@if (User.IsInRole(Roles.Admin) || User.GetUserId() == Model.OrganizerUserId)
{
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Delete this event?');">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>

        @if (User.IsInRole(Roles.Admin))
        {
            <a class="btn btn-outline-secondary"
               asp-area="Admin"
               asp-controller="Registrations"
               asp-action="ForEvent"
               asp-route-eventId="@Model.Id">Manage registrations</a>
        }
    </div>
}
